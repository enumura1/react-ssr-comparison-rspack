{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2022",
      "outDir": "dist",
      "noEmit": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "allowImportingTsExtensions": false
    },
    "include": ["src/server-*.ts"]
  }
